<Window x:Class="Sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:sudoku="clr-namespace:Sudoku"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <SolidColorBrush x:Key="smallGrid">LightGray</SolidColorBrush>
        <Thickness x:Key="smallGridWidth">1</Thickness>
    </Window.Resources>
    <Grid>
        <ItemsControl ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="9" Columns="9" IsItemsHost="True"></UniformGrid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border  BorderThickness="{StaticResource smallGridWidth}" BorderBrush="{StaticResource smallGrid}"  Margin="4">
                        <TextBlock Text="5" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <sudoku:LargeGrid/>
    </Grid>
   
</Window>
